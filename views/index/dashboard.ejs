<% include ../partials/top %>
<h1>Welcome 
    <% if(user){  %>
       <%=user.firstName%>
    <%}%>
 </h1>
<h4>Your POSTS</h4>
<% if(posts.length>0) { %>
    <% for(var i=0;i<posts.length;i++){ %>
       <div class="card">
<p><%=posts[i].status %></p>
    <p><%=posts[i].title %></p>
    <p><%- posts[i].body %> </p>
        <a href="/posts/edit/<%= posts[i].id %>" type="button" class="btn btn-info">edit post</a>
        <form action="/posts/<%= posts[i].id %>?_method=DELETE"method="post">
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit" class="btn btn-danger">delete</button>
        </form>
    </div>
    <% } %>
            <%}else{%>
        <h4>No posts what are you waiting for</h4>
        <% } %>



